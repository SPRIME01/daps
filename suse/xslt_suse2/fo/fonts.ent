<!-- The normal font name is on the left, the second one is needed only for
     XEP. -->
<!ENTITY serif         "'Charis SIL', CharisSIL">
<!ENTITY sans          "'Open Sans', OpenSans">
<!ENTITY mono          "'DejaVu Sans Mono', DejaVuSansMono">
<!ENTITY dingbat       "'SUSE Docudings', SUSEDocudings">


<!-- Standard-order font sizesâ€¦ -->
<!ENTITY xxx-small      "6">
<!ENTITY xx-small       "7">
<!ENTITY x-small        "8">
<!ENTITY small          "10">
<!ENTITY normal         "11">
<!ENTITY large          "13">
<!ENTITY x-large        "16">
<!ENTITY xx-large       "18">
<!ENTITY xxx-large      "21">
<!ENTITY super-large    "36">
<!ENTITY ultra-large    "48">


<!-- Factor used to adjust the x-height of &serif; to that of &sans; and,
     more importantly, &mono;. (Specific to Charis SIL.)-->
<!ENTITY serif-factor    "1.1">

<!-- The width-to-height ratio of &mono;. (Specific to DejaVu Sans Mono.) -->
<!ENTITY mono-ratio    "0.65">
