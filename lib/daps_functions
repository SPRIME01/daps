		;;
	    --fop)
                if [[ xep = $2 || fop = $2 ]]; then
                    export FOPTYPE="$2"
                    export FOP="${LIB_DIR}/daps-$2"
                else
		    exit_on_error "Wrong parameter for $1: must be \"xep\" or \"fop\"!"
                fi
		shift 2
