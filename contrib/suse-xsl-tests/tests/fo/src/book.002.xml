<?xml version="1.0" encoding="UTF-8"?>

<?xml-model href="../../tools/rng/testcase.rnc" type="application/relax-ng-compact-syntax"?>

<t:testcases version="1.0" 
  xmlns:t="urn:x-suse:toms:ns:testcases"
  xmlns:fo="http://www.w3.org/1999/XSL/Format">
  <t:scenario>
    <t:try xpath="local-name(/fo:root)" expect="'root'"/>
    <t:try xpath="/fo:root/@language" expect="'en'"/>
    <t:try xpath="count(//fo:*[@id='book.example'])" expect="1"/>
    
    <t:context xmlns="">
      <book lang="en" id="book.example">
        <?suse-quickstart columns="no" version="2"?>
        <title>Example Guide</title>
        <bookinfo>
          <abstract>
            <para>para in abstract</para>
          </abstract>
        </bookinfo>
        <chapter id="cha.first">
          <title>First Chapter</title>
          <para/>
        </chapter>
      </book>
    </t:context>
  </t:scenario>

</t:testcases>
