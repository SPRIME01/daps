## ----------------------------
## Doc Config File for DAPS
## DAPS User Guide
## ----------------------------
##
## Basics
MAIN="MAIN.DAPS.xml"
ROOTID="book.daps.user"

## Profiling
# "[no]quick" is not an actual OS -- it determines whether or not the links into
# the Quick Start Guide should be added
PROFOS="osuse;noquick"

PROFARCH="x86;amd64;em64t"

## stylesheet location
#STYLEROOT="/usr/share/xml/docbook/stylesheet/suse"
STYLEROOT="../suse/xslt"
#STYLEROOT="/usr/share/xml/docbook/stylesheet/nwalsh/current"
#HTML_CSS="./daps.css"
#EPUB_CSS="./daps.css"

## enable sourcing
export DOCCONF=$BASH_SOURCE

## show acronyms in the glossary, so as not to confuse the user
XSLTPARAM="'--stringparam glossentry.show.acronym=primary'"

## do not show remarks directly in the (PDF) text
XSLTPARAM="'--param use.xep.annotate.pdf=0'"

## when using the suse_beta aka xslt_suse2 stylesheets, set a link to the DAPS
## homepage at the top of the page
XSLTPARAM="'--stringparam homepage=http://daps.sourceforge.net'"
