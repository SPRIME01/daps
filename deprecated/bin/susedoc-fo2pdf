#!/bin/sh
#
# Wrapper script to encapsulate FO to PDF call
# TODO:
# - Add (more?) configuration options
# - Add sourcing of config file
#

ROOT=$(dirname $0)
# /usr/bin
DEFAULT=xep
FORMATTER=${DEFAULT}

case "$1" in
  --xep|-x)
    FORMATTER=xep
    shift;;
  --fop|-f)
    FORMATTER=fop
    shift;;
  *)
    FORMATTER=${DEFAULT}
esac

[ -s $ROOT/susedoc-${FORMATTER} ] && $ROOT/susedoc-${FORMATTER} "$@" || echo "ERROR: susedoc-${FORMATTER} not found."

# EOF